{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active C file",
      "type": "shell",
      "command": "gcc",
        "args": [
        "-g",
        "${fileDirname}/*.c",
        "-o",
        "${fileDirname}/output"
        ],

      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build C file using GCC"
    }
  ]
}
